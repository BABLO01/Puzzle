    <script>
        // === GAME STATE ===
        const state = {
            imageSrc: null,
            gridSize: 3,
            mode: 'simple', // simple, assistant, coop, competitive
            tiles: [],
            placedTiles: [],
            currency: 50,
            hintsLeft: 3,
            aiProgress: 0, // For competitive mode
            isDragging: false,
            dragElement: null,
            dragOffset: { x: 0, y: 0 },
            coopTimer: null
        };

        // === DOM ELEMENTS ===
        const screens = {
            splash: document.getElementById('splash-screen'),
            setup: document.getElementById('setup-screen'),
            game: document.getElementById('game-screen')
        };
        const gridEl = document.getElementById('puzzle-grid');
        const inventoryEl = document.getElementById('inventory-container');
        const chatOverlay = document.getElementById('chat-overlay');
        const chatMessages = document.getElementById('chat-messages');
        const chatInput = document.getElementById('chat-input');
        const compBar = document.getElementById('comp-bar-fill');
        const compContainer = document.getElementById('comp-bar-container');

        // === NAVIGATION ===
        function goToStart() {
            screens.splash.classList.add('hidden');
            screens.setup.classList.remove('hidden');
            screens.setup.classList.add('flex');
        }

        function quitGame() {
            clearInterval(state.coopTimer);
            screens.game.classList.add('hidden');
            screens.game.classList.remove('flex');
            screens.setup.classList.remove('hidden');
            screens.setup.classList.add('flex');
            document.getElementById('win-modal').classList.add('hidden');
        }

        // === SETUP LOGIC ===
        function handleImageUpload(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(event) {
                    state.imageSrc = event.target.result;
                    const img = document.getElementById('preview-img');
                    img.src = state.imageSrc;
                    img.classList.remove('hidden');
                }
                reader.readAsDataURL(file);
            }
        }

        function selectDifficulty(n, btn) {
            state.gridSize = n;
            document.querySelectorAll('.diff-btn').forEach(b => b.classList.remove('bg-blue-600', 'text-white'));
            btn.classList.add('bg-blue-600', 'text-white');
        }

        function selectMode(m, card) {
            state.mode = m;
            document.querySelectorAll('.mode-card').forEach(c => c.classList.remove('border-blue-500', 'bg-slate-700'));
            card.classList.add('border-blue-500', 'bg-slate-700');
        }

        // === GAME INITIALIZATION ===
        function startGame() {
            if (!state.imageSrc) {
                // Default placeholder image if none uploaded
                state.imageSrc = "https://images.unsplash.com/photo-1542291026-7eec264c27ff?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80";
            }

            screens.setup.classList.add('hidden');
            screens.setup.classList.remove('flex');
            screens.game.classList.remove('hidden');
            screens.game.classList.add('flex');

            initPuzzle();
            
            if (state.mode === 'assistant') {
                addChatMessage('ai', "Assalam-o-Alaikum! Main aapka AI dost hoon. Chalo ye puzzle solve karte hain. Koi madad chahiye to batana!");
            } else if (state.mode === 'coop') {
                addChatMessage('ai', "Chalo mil kar karte hain! Main bhi tiles lagaunga.");
                startCoopMode();
            } else if (state.mode === 'competitive') {
                compContainer.classList.remove('hidden');
                addChatMessage('ai', "Ready? Race shuru! Dekhte hain kaun jeetta hai.");
            }
        }

        function initPuzzle() {
            gridEl.innerHTML = '';
            inventoryEl.innerHTML = '';
            state.tiles = [];
            state.placedTiles = [];
            
            // Create Grid Slots
            const size = state.gridSize;
            const percent = 100 / size;
            
            // Set grid container style
            gridEl.style.display = 'grid';
            gridEl.style.gridTemplateColumns = `repeat(${size}, 1fr)`;
            gridEl.style.gridTemplateRows = `repeat(${size}, 1fr)`;
            gridEl.style.width = '100%';
            gridEl.style.height = '100%';
            gridEl.style.aspectRatio = '1/1'; // Square grid

            for (let r = 0; r < size; r++) {
                for (let c = 0; c < size; c++) {
                    const slot = document.createElement('div');
                    slot.className = 'grid-slot w-full h-full';
                    slot.dataset.row = r;
                    slot.dataset.col = c;
                    gridEl.appendChild(slot);
                }
            }

            // Create Tiles
            const totalTiles = size * size;
            const positions = [];
            for(let i=0; i<totalTiles; i++) positions.push(i);
            
            // Shuffle positions
            for (let i = positions.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [positions[i], positions[j]] = [positions[j], positions[i]];
            }

            positions.forEach((pos, index) => {
                const r = Math.floor(pos / size);
                const c = pos % size;
                
                const tile = document.createElement('div');
                tile.className = 'puzzle-piece';
                tile.style.width = `${percent}%`;
                tile.style.height = `${percent}%`;
                tile.style.backgroundImage = `url(${state.imageSrc})`;
                tile.style.backgroundSize = `${size * 100}%`;
              
